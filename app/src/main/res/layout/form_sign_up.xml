<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blueAdmin"
    android:gravity="center"
    android:id="@+id/userSignUp"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingVertical="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:text="Đăng Ký Tài Khoản"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_horizontal"
            android:drawableStart="@drawable/user_solid_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/blueAdmin"
            android:hint="Nhập tài khoản"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_horizontal"
            android:drawableStart="@drawable/lock_solid_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/blueAdmin"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_horizontal"
            android:drawableStart="@drawable/lock_solid_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/blueAdmin"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp" />
    </LinearLayout>
    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Đăng Ký"
        android:textColor="@color/blueAdmin"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />
</LinearLayout>